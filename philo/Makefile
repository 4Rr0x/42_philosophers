# **************************************************************************** #
#                                                                              #
#                                 Project Name                                 #
#                                                                              #
# **************************************************************************** #

NAME		= philo

# **************************************************************************** #
#                                                                              #
#                                 Directories                                  #
#                                                                              #
# **************************************************************************** #

SRC_DIR		= src
OBJ_DIR		= obj

# **************************************************************************** #
#                                                                              #
#                                 Source Files                                 #
#                                                                              #
# **************************************************************************** #

SRC			= $(SRC_DIR)/main.c \
			  $(SRC_DIR)/init.c \
			  $(SRC_DIR)/parser.c \
			  $(SRC_DIR)/threads.c \
			  $(SRC_DIR)/routines.c \
			  $(SRC_DIR)/monitor.c \
			  $(SRC_DIR)/utils.c \
			  $(SRC_DIR)/cleanup.c

# **************************************************************************** #
#                                                                              #
#                                 Object Files                                 #
#                                                                              #
# **************************************************************************** #

OBJS		= $(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

# **************************************************************************** #
#                                                                              #
#                               Compiler & Flags                               #
#                                                                              #
# **************************************************************************** #

CC			= cc
CFLAGS		= -Wall -Wextra -Werror -pthread
DFLAGS		= -g

# **************************************************************************** #
#                                                                              #
#                                 Build Rules                                  #
#                                                                              #
# **************************************************************************** #

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(@D)
	@$(CC) $(CFLAGS) $(DFLAGS) -c $< -o $@

all: $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(DFLAGS) $(OBJS) -o $(NAME)
	@echo "$(PREFIX) $(B)Executable$(D) compiled $(SUCCESS)."

# **************************************************************************** #
#                                                                              #
#                                Cleaning Rules                                #
#                                                                              #
# **************************************************************************** #

clean:
	@if [ -d "$(OBJ_DIR)" ] || [ -f "$(NAME)" ]; then \
		rm -rf $(OBJ_DIR) $(NAME); \
		echo "$(PREFIX) Objects & Executable removed $(SUCCESS)."; \
	else \
		echo "$(PREFIX) Nothing to clean."; \
	fi

fclean: clean

re: fclean all

# **************************************************************************** #
#                                                                              #
#                              Colors & Messages                               #
#                                                                              #
# **************************************************************************** #

B  			= $(shell tput bold)
RED			= $(shell tput setaf 1)
GRN			= $(shell tput setaf 2)
YEL			= $(shell tput setaf 3)
BLU			= $(shell tput setaf 4)
MAG			= $(shell tput setaf 5)
D 			= $(shell tput sgr0)

PREFIX		= $(B)$(MAG)[Philosophers]$(D)
SUCCESS		= $(GRN)successfully$(D)
FAILURE		= $(GRN)failed$(D)
